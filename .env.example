# Nurture App Environment Configuration Template
# Copy this to .env and fill in your values

# ==========================================
# BACKEND CONFIGURATION
# ==========================================

# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_SECRET_KEY=your-secret-key-here

# Server Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000

# AWS Strands SDK Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Strands AI Configuration
STRANDS_API_KEY=your-strands-api-key
STRANDS_ENDPOINT=https://api.strands.ai
STRANDS_MODEL_PROVIDER=bedrock
STRANDS_DEFAULT_MODEL=claude-sonnet-4-20250514-v1:0
STRANDS_AGENT_TIMEOUT=120000
STRANDS_MAX_TOKENS=8192

# Database (if using)
DATABASE_URL=sqlite:///nurture.db

# ==========================================
# FRONTEND CONFIGURATION  
# ==========================================

# React App Settings
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id

# ==========================================
# OPTIONAL SERVICES
# ==========================================

# Monitoring and Analytics
REACT_APP_ANALYTICS_ID=your-analytics-id

# Error Tracking
SENTRY_DSN=your-sentry-dsn

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password